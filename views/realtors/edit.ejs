<%- include('../partials/html-head') %>


<main class="container container-column column-center full-size">
  <h1 class="form-title">Update this Realtor</h1>
  <form class="container container-column column-center-top"  action="/realtors/<%= realtor._id %>?_method=PUT" method="POST">
    <input class ="form-input" name= "name" value="<%= realtor.name %>" placeholder="Full Name">
    <input class="form-input" type="text" name="title" value="<%= realtor.title %>" placeholder="Title">
    <textarea spellcheck="true" class="form-input form-textarea" type="text" name="aboutMe" placeholder="Write a description here..." required><%= realtor.aboutMe %></textarea>
    <select class ="form-input form-select" name="experience" id="experience-select" value="<%= realtor.experience %> ">
      <option value="expert">Expert</option>
      <option value="advanced">Advanced</option>
      <option value="beginner">Beginner</option>
      <option value="intern">Intern</option>
    </select>
    <div class="container container-column column center" style="text-align: center;">
      Current Image:
      <img class="current-image" src="<%= realtor.photo %>" alt="current-photo"/>
    </div>
    <input class="form-input" type="text" name="photo" placeholder="Photo: Direct Link from Imgur" value="<%= realtor.photo %>">
    <button type="submit" class="btn btn-primary">Save Changes</button>
  </form>
</main>

